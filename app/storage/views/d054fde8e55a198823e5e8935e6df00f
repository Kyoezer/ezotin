<script>
	$('#editprofileform').bootstrapValidator({
		fields: {
			Email: {
				validators: {
					remote: {
						message: 'Email already taken',
						url: "<?php echo CONST_SITELINK.'sys/emailavailability'?>",
						delay: 2000
					}
				}
			},
			username: {
				validators: {
					remote: {
						message: 'Username already taken',
						url: "<?php echo CONST_SITELINK.'sys/usernameavailability'?>",
						delay: 2000
					}
				}
			}
		}
	});
</script>
