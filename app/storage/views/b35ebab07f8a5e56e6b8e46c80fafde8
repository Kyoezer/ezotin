							<div class="input-icon right">
								<i class="fa fa-calendar"></i>
								<input type="text" name="CommencementDateFinal" id="commencementDateFinal" onchange="checkCompletionDate()" value="<?php if($detailsOfCompletedWork->CommencementDateFinal): ?><?php echo convertDateToClientFormat($detailsOfCompletedWork->CommencementDateFinal); ?><?php endif; ?>" class="form-control datepicker input-sm required workstatuscompletedcontrol" readonly>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-3">
