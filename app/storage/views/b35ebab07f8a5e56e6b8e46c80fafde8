							<div class="input-icon right">
								<i class="fa fa-calendar"></i>
								<input type="text" name="CompletionDateFinal" id="completionDateFinal" onchange="checkCompletionDate()" class="form-control datepicker input-sm workstatuscompletedcontrol required" readonly="readonly" value="<?php if($detailsOfCompletedWork->CompletionDateFinal): ?><?php echo convertDateToClientFormat($detailsOfCompletedWork->CompletionDateFinal); ?><?php endif; ?>">
							</div>
						</div>
						<div class="text-danger bold hidden" id="dateCommencementMessage">Date of completion cannot be less than date of commencement</div>
